@model CreateProjectViewModel

<form asp-controller="Project" asp-action="CreateProject" method="post" class="form-horizontal" role="form">
    <h4>Create a project</h4>
    <div asp-validation-summary="All" class="text-danger" style="color:red"></div>
    <hr />
    @*<div asp-validation-summary="All" class="text-danger"></div>*@
    <div class="form-group">
        <label asp-for="ProjName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ProjName" class="form-control" />
            <span asp-validation-for="ProjName" class="text-danger" style="color:red"></span>
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="ProtdCompDate" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="ProtdCompDate" class="form-control" />
            <span asp-validation-for="ProtdCompDate" class="text-danger" style="color:red"></span>
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Visibility" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="Visibility">
                <option value=@ProjVisibility.Visible_To_Everyone>Visible To Everyone</option>
                <option value=@ProjVisibility.Visible_To_All_Users>Visible To All Users</option>
                <option value=@ProjVisibility.Only_Visible_To_Buyers>Only Visible To Buyers</option>
                <option value=@ProjVisibility.Invisible>Invisible</option>
            </select>
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="RepoLink" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="RepoLink" class="form-control" />
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="Valuation" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Valuation" class="form-control" />
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="BriefDescript" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="BriefDescript" rows="10" cols="30"></textarea>
            <span asp-validation-for="BriefDescript" class="text-danger" style="color:red"></span>
        </div>
    </div>
    <br>
    <div class="form-group">
        <label asp-for="FullDescript" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="FullDescript" rows="15" cols="50"></textarea>
            <span asp-validation-for="FullDescript" class="text-danger" style="color:red"></span>
        </div>
    </div>
    <br>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </div>
</form>