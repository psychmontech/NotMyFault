@model NonLoggedInViewModel

@if (Model.Controller == "Account" && Model.Action == "Login")
{
    <div style="text-align:left;">
        Pleaes enter your username and password 
        <span style="float:right;">
            <a asp-controller="Account" asp-action="Start">Cancel</a>
        </span>
    </div>
}

else if (Model.Controller == "Account" && Model.Action == "Register")
{
    <div style="text-align:left;">
        Create a new account
        <span style="float:right;">
            <a asp-controller="Account" asp-action="Start">Cancel</a>
        </span>
    </div>
}

else
{
    <div align="right">
        <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
    </div>
}


