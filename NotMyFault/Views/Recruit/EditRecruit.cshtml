@model CreateRecruitViewModel

<nav class="navbar  navbar-light bg-light">
    <div class="container-fluid">
        <ul class="nav">
            <li class="nav-item"><a class="nav-link" asp-controller="Recruit" asp-action="Index" asp-route-id="@Model.ProjId">Cancel</a></li>
        </ul>
    </div>
</nav>

<form asp-controller="Recruit" asp-action="EditRecruit" method="post" role="form">
    <input type="hidden" asp-for="ProjId" />  @*we use projId as recruitId here*@

    <div class="col-md-6 mt-4">
        <label asp-for="NameOfTheRole"></label>
        <div>
            <input asp-for="NameOfTheRole" placeholder="max 40 char" class="form-control" maxlength="40" required />
            <span asp-validation-for="NameOfTheRole" style="color:red"></span>
        </div>

        <label asp-for="RoleDescription" class="mt-5"></label>
        <div>
            <textarea asp-for="RoleDescription" rows="8" placeholder="max 1000 char" class="form-control" maxlength="1000" required></textarea>
            <span asp-validation-for="RoleDescription" style="color:red"></span>
        </div>

        <label asp-for="RequirDescript" class="mt-5"></label>
        <div>
            <textarea asp-for="RequirDescript" rows="8" placeholder="max 1000 char" class="form-control" maxlength="1000" required></textarea>
            <span asp-validation-for="RequirDescript" style="color:red"></span>
        </div>
    </div>

    <div class="col-md-3 mt-5">
        <label asp-for="MinCredit"></label>
        <div>
            <input asp-for="MinCredit" class="form-control" />
            <span asp-validation-for="MinCredit" style="color:red"></span>
        </div>
        <label asp-for="MaxProjWkon" class="mt-5"></label>
        <div>
            <select asp-for="MaxProjWkon" class="form-control">
                <option value=0>0</option>
                <option value=1>1</option>
                <option value=2>2</option>
                <option value=3>3</option>
            </select>
        </div>
    </div>

    <div class="col-md-6">
        <input type="submit" class="btn btn-block btn-outline-success btn-signin mt-5 mb-5" value="Save" />
    </div>
</form>