@model SearchRecruitViewModel

<a asp-controller="Dev" asp-action="Index">Home</a>
<table>
    <tr>
        <th>Role name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>started on&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>Project name&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>Min credit&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
        <th>Max projects on&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
    </tr>

    @foreach (var recruit in Model.Recruits)
    {
        <tr>
            <td>
                @*<a asp-controller="Project" asp-action="Index" asp-route-id="@proj.ProjectId">@proj.ProjName</a>*@
                @recruit.NameOfTheRole
            </td>

            <td>
                @recruit.DateCreated.ToString("dd/MM/yyy")
            </td>

            <td>
                <a asp-controller="Project" asp-action="Index" asp-route-id="@recruit.MyProj.ProjectId">@recruit.MyProj.ProjName</a>
            </td>

            <td>
                @recruit.MinCredit.ToString()
            </td>

            <td>
                @recruit.MaxNumPrjWkOn.ToString()
            </td>

        </tr>
    }
</table>
