@model DevHomeViewModel

<h1>This is developer Home page</h1>
<form asp-controller="Project" asp-action="CreateProject" method="get" class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="newProject" value="New Project" />
        </div>
    </div>
</form>
<br>
<h3>My working projects</h3>
<table>
    @foreach (var proj in Model.MyInvolvedProjects)
    {
        <tr>
            <td>
                <a asp-controller="Project" asp-action="Index" asp-route-id="@proj.ProjectId">@proj.ProjName</a> 
            </td>
        </tr>
    }
</table>
<br>
<h3>My leading projects</h3>
<table>
    @foreach (var proj in Model.MyLeadingProjects)
    {
        <tr>
            <td>
                <a asp-controller="Project" asp-action="Index" asp-route-id="@proj.ProjectId">@proj.ProjName</a>
            </td>
        </tr>
    }
</table>
<br>
<h3>My following projects</h3>
<table>
    @foreach (var proj in Model.MyFollowingProjects)
    {
        <tr>
            <td>
                <a asp-controller="Project" asp-action="Index" asp-route-id="@proj.ProjectId">@proj.ProjName</a>
            </td>
        </tr>
    }
</table>
<br>
<h3>My endorsments</h3>
<table>
    @foreach (var endors in Model.MyEndors)
    {
        <tr><td>@endors.Subject</td></tr>
    }
</table>
<h3>
    <a asp-controller="Project" asp-action="SearchProjects">Recently opened projects</a>
</h3>







