@model LoginViewModel

<div class="row justify-content-center" >
    <div class="col-md-5">
        <form asp-controller="Account" asp-action="Login" method="post" role="form" class="form-signin">
            <img class="profile-img-card mt-4" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <div>
                <input asp-for="UserName" placeholder="username" class="form-control mt-4" required autofocus />
                <span asp-validation-for="UserName" style="color:red"></span>
            </div>
            <div>
                <input asp-for="Password" placeholder="password" class="form-control mt-4" required />
                <span asp-validation-for="Password" style="color:red"></span>
            </div>
            <input type="submit" class="btn btn-block btn-outline-success btn-signin mt-4" value="Log in" />
        </form>
    </div>
</div>