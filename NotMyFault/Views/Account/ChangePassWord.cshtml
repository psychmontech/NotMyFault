@model ChangePasswordViewModel

<a asp-area="" asp-controller="Account" asp-action="EditUserProfile">Cancel</a>

<form asp-controller="Account" asp-action="ChangePassword" method="post" role="form">
    <div asp-validation-summary="All" style="color:red"></div>
    <div>
        <label asp-for="OldPassword"></label>
        <div>
            <input asp-for="OldPassword" />
            <span asp-validation-for="OldPassword" style="color:red"></span>
        </div>
    </div>
    <br>
    <div>  
        <label asp-for="NewPassword"></label>
        <div>
            <input asp-for="NewPassword" />
            <span asp-validation-for="NewPassword" style="color:red"></span>
        </div>
    </div>
    <br>
    <div>
        <label asp-for="ConfirmNewPassword"></label>
        <div>
            <input asp-for="ConfirmNewPassword" />
            <span asp-validation-for="ConfirmNewPassword" style="color:red"></span>
        </div>
    </div>
    <br>
    <div>
        <input type="submit" value="Save" />
    </div>
</form>
